{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Level:u3} {Timestamp:G} {SourceContext}[{EventId}]{NewLine}{Message} {NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path" :  "Logs\\log.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "rollingInterval": "Hour"
        }
      }
    ]
  },

  "AllowedHosts": "*",
  "ConnectionStrings": {
    "CityBreaksContext": "Data source=Data/CityBreaks.db"
  }
}
